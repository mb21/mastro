{
  "name": "mastro-ssg-vscode-extension",
  "displayName": "Mastro SSG (static site generation)",
  "description": "Build your static site inside your browser using vscode.dev or github.dev",
  "version": "0.0.1",
  "repository": {
    "url": "https://github.com/mb21/mastro.git",
    "type": "git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "browser": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mastro.start",
        "title": "Start dev server",
        "category": "mastro"
      }
    ]
  },
  "scripts": {
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ../examples/blog/",
    "vscode:prepublish": "npm run build",
    "tsc": "tsc --noEmit",
    "build": "npm run tsc && esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --target=esnext",
    "build-preview": "tsc ../src/*.ts --outDir ../vscode-extension-preview/mastro"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@vscode/test-web": "*",
    "esbuild": "^0.25.2",
    "typescript": "^5.7.2"
  },
  "volta": {
    "node": "23.5.0"
  }
}
